/* Linkable cards
-------------------------------------------------- */
a.card,
a.card:hover,
a.card:active,
a.card:visited {
    text-decoration: inherit;
    color: inherit;
}

a.card:hover {
    border-color: #768692;
}

a.card:active {
    border-color: #000;
}


/* Responsive extras
-------------------------------------------------- */

/* Mobile view */
@media screen and (max-width: 500px) {
    .card-grid {
        grid-template-columns: repeat( auto-fill, minmax(200px, 1fr) );
    }
    .logo-text {
        display: none;
    }
}
