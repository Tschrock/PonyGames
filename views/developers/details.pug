extends ../_layout/main
include ../_components/entityActions

block content

    h1= developer.name
    p= developer.shortDescription
    p= developer.description

    section
        h2 Teams
        .card-grid
            for member in developer.teamMemberships
                a.card(href=`/teams/${ member.team.id }`)
                    .card-body
                        h4.card-title= member.team.name
                        p.card-text= member.roles

    +entityActions("Developer", developer)
